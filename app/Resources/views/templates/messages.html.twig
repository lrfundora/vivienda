{% for msgInfo in app.session.flashbag.get('info') %}
    <div id="msgInfo" class="hidden" data-msg="{{ msgInfo }}"></div>
    <script>
        success();
        function success() {
            setTimeout(function () {
                initToastr();
                toastr.info($('#msgInfo').data('msg'), 'INFORMACIÓN');
            }, 1000);
        }
    </script>
{% endfor %}

