{% extends 'templates/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/plugins/dataTables/datatables.min.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/plugins/dataTables/datatables.min.js') }}"></script>
    <script src="{{ asset('assets/js/plugins/jeditable/jquery.jeditable.js') }}"></script>
    <script>
        $(function () {
            $('#editable').DataTable({
                aaSorting: [[3, "desc"]]
            });
        });
    </script>
{% endblock %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>TRAZAS</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ url('_inicio') }}">Inicio</a>
                </li>
                <li>
                    Seguridad
                </li>
                <li class="active">
                    <strong>Trazas</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>TRAZAS DEL SISTEMA</h5>

                    <div class="ibox-content table-responsive">
                        <table id="editable" class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th class="col-lg-1">Usuario</th>
                                <th class="col-lg-2">Nombre y Apellidos</th>
                                <th class="col-lg-2">Rol</th>
                                <th class="col-lg-1">Fecha</th>
                                <th class="col-lg-6">Acci√≥n</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in logs %}
                                <tr>
                                    <td><small>{{ item.usuario }}</small></td>
                                    <td><small>{{ item.trabajador }}</small></td>
                                    <td><small>{{ item.role }}</small></td>
                                    <td><small>{{ item.fecha | date('Y/m/d H:i') }}</small></td>
                                    <td><small>{{ item.accion }}</small></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}