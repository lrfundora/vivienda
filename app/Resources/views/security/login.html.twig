{% extends 'templates/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet"
          href="{{ asset('assets/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css') }}">
{% endblock %}

{% block ebody %}
<body class="gray-bg">
{% endblock %}

{% block design %}

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            {#<div>#}
                {#<h1 class="logo-name">VIVIENDA</h1>#}
            {#</div>#}
            <h3>BIENVENIDO</h3>

            <p>Sistema de Gestión de Información de la Vivienda</p>

            {#<p>Login in. To see it in action.</p>#}

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form class="m-t" role="form" action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Usuario" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" id="password" name="_password" placeholder="Contraseña" />
                </div>
                <div class="form-group" style="margin-top: -7px; height: 10px">
                    <div class="checkbox">
                    <input class="pull-left" type="checkbox" id="remember_me" name="_remember_me" />
                    <label class="pull-left" for="remember_me"> No cerrar sesión</label>
                    </div>
                </div>
                {#<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />#}
                <div class="form-group space-30">
                    <button type="submit" class="btn btn-primary block full-width m-b">Entrar</button>
                </div>
            </form>
            {#<a href="#">#}
            {#<small>Forgot password?</small>#}
            {#</a>#}

            {#<p class="text-muted text-center">#}
            {#<small>Do not have an account?</small>#}
            {#</p>#}
            {#<a class="btn btn-sm btn-white btn-block" href="#">Create an account</a>#}
            <p class="m-t">
                <small>VIVIENDA &copy; {% if 'now'|date('Y') <= 2016 %}2016{% else %}2016 - {{ 'now'|date('Y') }}{% endif %}. Todos los derechos reservados.</small>
            </p>
        </div>
    </div>

{% endblock %}
