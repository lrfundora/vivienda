{% extends 'templates/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/plugins/toastr/toastr.min.css') }}">
    <link rel="stylesheet"
          href="{{ asset('assets/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/plugins/validate/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('assets/js/validations/validate.security.entidad.edit.js') }}"></script>
{% endblock %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2 class="text-uppercase">editar entidad</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ url('_inicio') }}">Inicio</a>
                </li>
                <li>
                    Seguridad
                </li>
                <li>
                    <a href="{{ url('_seguridad_entidad') }}">Entidades</a>
                </li>
                <li class="active">
                    <strong>Editar entidad</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
{% endblock %}

{% block body %}

    {# Mensajes #}
    {#{% include 'templates/messages.html.twig' %}#}

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5 class="text-uppercase">Editar entidad</h5>

                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="col-lg-6">
                                {{ form_start(formEntidad, {'attr':{'id':'formEntidad'}}) }}
                                <div class="hidden">
                                    <input id="id" name="id" type="text" value="{{ entity.id }}">
                                </div>
                                <div class="form-group">
                                    {{ form_label(formEntidad.nombre, 'Nombre de la entidad') }}
                                    {{ form_widget(formEntidad.nombre, {'attr':{'placeholder':'Nombre'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(formEntidad.direccion, 'Dirección') }}
                                    {{ form_widget(formEntidad.direccion, {'attr':{'placeholder':'Dirección de la entidad'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(formEntidad.telefono, 'Teléfono') }}
                                    {{ form_widget(formEntidad.telefono, {'attr':{'placeholder':'ej: +53 45 555555'}}) }}
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        {{ form_widget(formEntidad.externa) }}
                                        {{ form_label(formEntidad.externa, 'Dependencia externa') }}<br>
                                        <small class="text-green"><strong>Asegúrese</strong> de especificar el tipo de
                                            dependencia de la entidad para garantizar un buen funciona del sistema.
                                        </small>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="pull-right">
                                        <button id="cancel" data-url="{{ url('_seguridad_entidad') }}" type="button"
                                                class="btn btn-default ">
                                            <i class="fa fa-times-circle"></i>
                                            Cancelar
                                        </button>
                                        <button type="submit" class="btn btn-success">
                                            <i class="fa fa-refresh"></i>
                                            Actualizar
                                        </button>
                                    </div>
                                </div>
                                {{ form_end(formEntidad) }}
                            </div>
                            <div class="col-lg-3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}