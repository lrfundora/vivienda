{% extends 'templates/layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/plugins/validate/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('assets/js/validations/validate.recep.search.js') }}"></script>
{% endblock %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2 class="text-uppercase">Nuevo arrendatario</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ url('_inicio') }}">Inicio</a>
                </li>
                <li>
                    {{ menu=='area'?'Área Legal':'Control de Fondo' }}
                </li>
                <li>
                    {{ menu=='area'?'Trámite':'Arrendamientos' }}
                </li>
                <li>
                    <strong>Arrendatario</strong>
                </li>
                <li class="active">
                    <strong>Nuevo</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5 class="text-uppercase">Nuevo arrendatario</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">

                        <div class="col-lg-4"></div>

                        <div class="col-lg-4">
                            <div class="alert alert-info">
                                <i class="fa fa-question-circle"></i>
                                ¿Está seguro/a de agregar otro arrendatario al arrendamiento?
                            </div>

                            <div class="row">
                                {{ form_start(form, {'attr':{'id':'formBuscarTramite'}}) }}
                                <div class="col-lg-9">
                                    <div class="form-group">
                                        <input class="hidden" id="idArrendamiento" name="idArrendamiento" type="text"
                                               value="{{ idArrendamiento }}">
                                        <label>Carnet</label>
                                        {{ form_widget(form.id, {'attr':{'placeholder':'Número de Carnet'}}) }}
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <br>
                                        <button id="send" type="submit" class="btn btn-xs btn-danger">
                                            <i class="fa fa-check-circle"></i>
                                            Validar
                                        </button>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                            <div class="form-group">
                                <label>Nombre</label>
                                <input class="form-control" type="text" disabled>
                            </div>
                            <div class="form-group">
                                <label>Apellidos</label>
                                <input class="form-control" type="text" disabled>
                            </div>
                            <div class="form-group">
                                <label>Dirección</label>
                                <textarea class="form-control" rows="3" disabled></textarea>
                            </div>

                            <div class="pull-right">
                                <button id="cancel" data-url="{{ url('_arealegal_tramite') }}" type="button"
                                        class="btn btn-default ">
                                    <i class="fa fa-times-circle"></i>
                                    Cancelar
                                </button>
                                <button type="button" class="btn btn-primary disabled">
                                    <i class="fa fa-save"></i>
                                    Agregar
                                </button>
                            </div>
                        </div>

                        <div class="col-lg-4"></div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}