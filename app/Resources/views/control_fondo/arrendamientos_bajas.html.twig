{% extends 'templates/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/plugins/toastr/toastr.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/plugins/dataTables/datatables.min.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/plugins/toastr/toastr.min.js') }}"></script>
    <script src="{{ asset('assets/js/plugins/validate/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('assets/js/validations/validate.cf.arrendamiento.js') }}"></script>
    <script src="{{ asset('assets/js/plugins/dataTables/datatables.min.js') }}"></script>
    <script src="{{ asset('assets/js/plugins/jeditable/jquery.jeditable.js') }}"></script>
    <script>
        $(function () {
            $('#editable').DataTable({
                aaSorting: [[0, "asc"]]
            });
        });

        $('button[class*="info"]').on('click', function (e) {
            $('#formInfo input[id*="_id"]').val($(this).attr('data-id'));
            $('#formInfo').submit();
        });

    </script>
{% endblock %}

{% block breadcrumb %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2 class="text-uppercase">Arrendamientos baja</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ url('_inicio') }}">Inicio</a>
                </li>
                <li>
                    Control de Fondo
                </li>
                <li class="active">
                    <strong>Arrendamientos baja</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
{% endblock %}

{% block body %}

    {# Mensajes #}
    {% include 'templates/messages.html.twig' %}

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5 class="text-uppercase">Arrendamientos baja</h5>

                    <div class="ibox-content table-responsive">
                        <table id="editable" class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th class="col-lg-2">Nombre y Apellidos</th>
                                <th class="col-lg-1">No. Expediente</th>
                                <th class="col-lg-1">No. Contrato</th>
                                <th class="col-lg-1">A침o de Construcci칩n</th>
                                <th class="col-lg-1">Valor</th>
                                <th class="col-lg-1">Fecha de Baja</th>
                                <th class="col-lg-4">Motivo</th>
                                <th class="col-lg-1 text-center">Acci칩n</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in arrendamientos %}
                                <tr>
                                    <td>
                                        {% for cliente in item.clientes %}
                                            {{ cliente.nombreCompleto }}
                                            {% if item.clientes|length>1 and not loop.last %}
                                                <br>
                                            {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {{ item.expediente }}
                                    </td>
                                    <td>
                                        {{ item.numeroContrato }}
                                    </td>
                                    <td>
                                        {{ item.anoConstruccion }}
                                    </td>
                                    <td>
                                        {{ item.valor | number_format(2, '.', ',') }}
                                    </td>
                                    <td>
                                        {{ item.fechaBaja | date('d/m/Y') }}
                                    </td>
                                    <td>
                                        {{ item.comentario }}
                                    </td>
                                    <td class="text-center">
                                        <div class="tooltip-demo">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-sm btn-outline btn-info info"
                                                        data-toggle="tooltip" data-placement="top"
                                                        title="Informaci칩n del arrendamiento"
                                                        data-id="{{ item.id }}">
                                                    <i class="fa fa-info-circle"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="hidden">
        {{ form_start(formInfo, {'attr':{'id':'formInfo'}}) }}
        {{ form_widget(formInfo) }}
        {{ form_end(formInfo) }}
    </div>

{% endblock %}